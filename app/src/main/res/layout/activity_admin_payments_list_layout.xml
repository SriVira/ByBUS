<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_pay_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_payments_list_layout">

    <androidx.cardview.widget.CardView
        android:id="@+id/admin_payment_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_card_name"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/admin_pay_cname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_payment_cardno"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/admin_pay_cno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:text="@string/admin_payment_cvc"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/admin_pay_cvc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_payment_exp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/admin_pay_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>